{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "text",
      "required": true,
      "unique": true
    },
    "PostDate": {
      "type": "date",
      "unique": false,
      "required": true
    },
    "Banner": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "Thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "Content": {
      "type": "richtext"
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title",
      "required": true
    },
    "IsFeatured": {
      "type": "boolean",
      "default": false
    },
    "Position": {
      "type": "integer"
    },
    "SocialMetaTags": {
      "type": "component",
      "repeatable": false,
      "component": "social.social-meta-tags",
      "required": true
    }
  }
}
